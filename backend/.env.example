# Database
# REQUERIDO: URL de conexión a PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/sistema_reservas?schema=public"

# JWT - JSON Web Tokens
# REQUERIDO: Clave secreta para firmar tokens (mínimo 32 caracteres recomendado)
# Puedes generar una con: openssl rand -base64 32
JWT_SECRET="tu-secret-key-super-segura-cambiame-MINIMO-32-CARACTERES"
# REQUERIDO: Clave secreta para refresh tokens (debe ser diferente de JWT_SECRET)
JWT_REFRESH_SECRET="tu-refresh-secret-key-super-segura-cambiame-MINIMO-32-CARACTERES"
# Tiempo de expiración del token principal
JWT_EXPIRES_IN="1h"
# Tiempo de expiración del refresh token
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# Email Configuration
# REQUERIDO: Configuración del servidor SMTP para envío de emails
# Para Gmail: smtp.gmail.com
# Para Outlook: smtp-mail.outlook.com
SMTP_HOST="smtp.gmail.com"
# REQUERIDO: Puerto SMTP (587 para TLS, 465 para SSL)
SMTP_PORT=587
# REQUERIDO: Usar SSL/TLS (true para puerto 465, false para puerto 587)
SMTP_SECURE=false
# REQUERIDO: Email del remitente
SMTP_USER="tu-email@gmail.com"
# REQUERIDO: Contraseña de aplicación (no uses tu contraseña real)
# Para Gmail: https://myaccount.google.com/apppasswords
SMTP_PASS="tu-password-de-aplicacion"
# REQUERIDO: Dirección que aparece como remitente
EMAIL_FROM="Sistema Reservas <noreply@sistema.com>"

# Frontend URL
# REQUERIDO: URL del frontend para CORS y redirecciones
FRONTEND_URL="http://localhost:3000"

# File Upload (Opcional)
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"

# Rate Limiting (Opcional - ya configurado en código)
# Ventana de tiempo para rate limiting (15 minutos = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Máximo de requests permitidos por ventana
RATE_LIMIT_MAX_REQUESTS=100

# Logging (Opcional)
# Nivel de logging: error, warn, info, http, debug
LOG_LEVEL=info
